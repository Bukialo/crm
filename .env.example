# Environment Configuration for Bukialo CRM

# Node Environment
NODE_ENV=development

# Backend Configuration
BACKEND_PORT=5000
BACKEND_URL=http://localhost:5000

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://bukialo_user:bukialo_pass@localhost:5432/bukialo_crm
DATABASE_POOL_SIZE=10

# Redis Configuration (for Bull queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Firebase Configuration
FIREBASE_PROJECT_ID=bukialo-crm
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Private Key Here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@bukialo-crm.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id
FIREBASE_API_KEY=your_firebase_api_key

# Google Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
EMAIL_FROM="Bukialo CRM <noreply@bukialo.com>"

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRES_IN=30d

# API Keys
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,text/csv,application/pdf,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# Sentry (Error Tracking) - Optional
SENTRY_DSN=

# Frontend Environment Variables (Public)
VITE_API_URL=http://localhost:5000/api
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=bukialo-crm.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=bukialo-crm
VITE_FIREBASE_STORAGE_BUCKET=bukialo-crm.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_key_if_needed

# WhatsApp Integration (Evolution API) - Future Feature
EVOLUTION_API_URL=
EVOLUTION_API_KEY=
EVOLUTION_INSTANCE_NAME=

# Payment Gateway (Future Feature)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=